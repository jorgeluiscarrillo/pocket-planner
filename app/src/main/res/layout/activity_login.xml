<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pocket_event_logo_image"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/g_top_margin"
            android:src="@drawable/eventplanning"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/proceed"
            android:layout_toRightOf="@+id/proceed"
            android:visibility="visible"
            tools:visibility="gone" />

        <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/facebook_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/google_sign_in_button"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3.5dp"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:visibility="visible"
            facebook:com_facebook_login_text="Sign in with Facebook"
            tools:visibility="gone"/>

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:visibility="visible"
            tools:visibility="gone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proceed"
            android:layout_marginTop="50dp"
            android:text="@string/proceed"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:visibility="visible"
            tools:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detour"
            android:layout_marginTop="100dp"
            android:text="Developer Proceed"/>

    </RelativeLayout>

</LinearLayout>